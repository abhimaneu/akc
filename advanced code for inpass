-----------------------------------------searchproducts.php---------------------------------------------
<?php
// Include your database connection file or any other necessary files
include 'conn.php';

if (!$conn) {
    echo "Error Occurred";
    exit;
}

// Retrieve the search keyword from the Ajax request
$searchValue = $_GET['ajax_search'];

// Construct the SQL query to search for matching records
$sql = "SELECT * FROM inpass,inpass_products WHERE inpass.no = inpass_products.inpass_no AND product_name LIKE '%$searchValue%' OR product_code LIKE '%$searchValue%'";

// Execute the SQL query
$result = mysqli_query($conn, $sql);
if (!$result) {
    echo mysqli_error($conn);
    exit;
}

// Process the search results and generate HTML to send back to the Ajax request
if (mysqli_num_rows($result) > 0) {
    // Start building the HTML for search results
    $html = '<table>';
    $html .= '<thead>';
    $html .= '<tr>';
    $html .= '<th>Inpass No</th>';
    $html .= '<th>Date</th>';
    $html .= '<th>Source Company</th>';
    $html .= '<th>Product Desc.</th>';
    $html .= '<th>Product Accp. Quantity</th>';
    $html .= '<th>Vehicle No.</th>';
    $html .= '<th>Extras</th>';
    $html .= '</tr>';
    $html .= '</thead>';
    $html .= '<tbody>';

    // Loop through each row in the result set
    while ($row = mysqli_fetch_assoc($result)) {
        $html .= '<tr>';
        $html .= '<td>' . $row['no'] . '</td>';
        $html .= '<td>' . $row['date'] . '</td>';
        $html .= '<td>' . $row['source'] . '</td>';
        $html .= '<td>' . $row['product_code'] . $row['product_name'] . $row['product_design'] . $row['product_size'] .'</td>';
        $html .= '<td>' . $row['product_qty'] . '</td>';
        $html .= '<td>' . $row['vehicleno'] . '</td>';
        $html .= '<td>' . $row['extras'] . '</td>';
        $html .= '</tr>';
    }

    // Finish building the HTML for search results
    $html .= '</tbody>';
    $html .= '</table>';

    // Send the HTML response back to the Ajax request
    echo $html;
} else {
    // If no matching records found, send a message back to the Ajax request
    echo 'No results found.';
}

mysqli_close($conn);
?>
